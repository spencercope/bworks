{
  "name": "server",
  "version": "1.0.0",
  "description": "bworks",
  "author": "us",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "postinstall": "tsc"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.3",
    "nodemon": "^1.18.10",
    "@nestjs/core": "^5.7.3",
    "@nestjs/jwt": "^0.3.0",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/passport": "^5.1.0",
    "bcrypt": "^3.0.4",
    "cloudinary": "^1.13.2",
    "compression": "^1.7.3",
    "email-templates": "^5.0.4",
    "handlebars": "^4.1.0",
    "helmet": "^3.15.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.15",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/mongoose": "^5.3.19",
    "@types/node": "^11.9.5",
    "@types/supertest": "^2.0.7",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
